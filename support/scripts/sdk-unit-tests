#!/usr/bin/env bash

set -xeu
set -o pipefail

function finish() {
  printf "\n---Finished Running SDK Unit Tests---\n"
}

trap finish EXIT

# Run all unit tests inside the test-collector module
./gradlew clean :test-collector:instrumented-test-collector-library:testDebug
./gradlew clean :test-collector:test-data-uploader:test
./gradlew clean :test-collector:unit-test-collector-plugin:test